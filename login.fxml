<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.quizapp.ui.LoginController"
      alignment="CENTER" spacing="10" styleClass="root">
    <Label text="Login to Quiz App" styleClass="title"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Login" onAction="#onLogin"/>
    <Label fx:id="messageLabel"/>
</VBox>
